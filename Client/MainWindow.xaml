<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Micro ERP" Height="640" Width="480" MinWidth="480" MinHeight="640" ResizeMode="CanMinimize">
    <Grid>
        <TabControl x:Name="tabMain" Margin="0">
            <TabItem x:Name="titmBase" Header="Base" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="57">
                <Grid Background="#FFE5E5E5">
                    <GroupBox Header="Filter" Margin="10,10,10,0" VerticalAlignment="Top" Width="444" Height="128">
                        <Grid Margin="0,0,0,7">
                            <Label Content="Forename" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <Label Content="Surname" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtFilterForename" Height="23" Margin="80,13,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtFilterSurname" Height="23" Margin="80,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                            <Button x:Name="btnFilterSearch" Content="Search" HorizontalAlignment="Left" Margin="347,69,0,0" VerticalAlignment="Top" Width="75"/>
                        </Grid>
                    </GroupBox>
                    <ListView x:Name="lstResult" Margin="10,143,10,10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem x:Name="titmInvoice" Header="Invoice">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Margin="0"/>
                    <GroupBox x:Name="grpCompany" Header="Company" Margin="10,10,10,0" VerticalAlignment="Top" Height="96">
                        <Grid Margin="0">
                            <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <Label Content="UID" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtCompanyName" HorizontalAlignment="Left" Height="23" Margin="80,12,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342"/>
                            <TextBox x:Name="txtCompanyUID" HorizontalAlignment="Left" Height="23" Margin="80,40,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Person" Margin="10,111,10,0" VerticalAlignment="Top" Width="444" Height="154">
                        <Grid Margin="0">
                            <TextBox x:Name="txtPersonForename" HorizontalAlignment="Left" Height="23" Margin="80,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342"/>
                            <TextBox x:Name="txtPersonSurname" HorizontalAlignment="Left" Height="23" Margin="80,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342"/>
                            <CheckBox x:Name="chkPersonCompany" Content="" HorizontalAlignment="Left" Margin="80,69,0,0" VerticalAlignment="Top"/>
                            <Button x:Name="btnPersonSearch" Content="Search" HorizontalAlignment="Left" Margin="267,66,0,0" VerticalAlignment="Top" Width="75"/>
                            <Button x:Name="btnPersonDelete" Content="Delete" HorizontalAlignment="Left" Margin="347,66,0,0" VerticalAlignment="Top" Width="75"/>
                            <Label Content="Forename" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <Label Content="Surname" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
                            <Label Content="Company" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
                            <Label Content="Birthday" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top"/>
                            <DatePicker x:Name="dtePersonBirthday" HorizontalAlignment="Left" Margin="80,94,0,0" VerticalAlignment="Top" Width="342"/>
                            <ComboBox x:Name="cmbPersonCompany" HorizontalAlignment="Left" Margin="102,66,0,0" VerticalAlignment="Top" Width="160" IsEditable="True"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Addresses" Margin="10,270,10,10" Width="444"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
